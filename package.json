{
  "name": "one-rm-tracker",
  "version": "1.0.0",
  "description": "1RM Tracker App – lokal für macOS mit Daten aus Google Sheets",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build-react": "vite build",
    "start": "npm run build-react && electron .",
    "dist": "npm run build-react && electron-builder --mac"
  },
  "build": {
    "appId": "com.deinname.onermtracker",
    "mac": {
      "target": "dmg"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.6.0"
  }
}
